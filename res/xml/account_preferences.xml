<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="Account Settings" />

	<PreferenceScreen android:key="account_status"
		android:title="KolabDroid status" android:summary="Sync status">
		<intent 
			android:action="at.dasz.KolabDroid.action.MAIN" android:targetClass="at.dasz.KolabDroid.Main" android:targetPackage="at.dasz.KolabDroid"/>
	</PreferenceScreen>

	<PreferenceScreen android:key="account_settings"
		android:title="KolabDroid settings" android:summary="Configure Settings">
		<intent 
			android:action="at.dasz.KolabDroid.Settings.action.EDIT_TITLE" android:targetClass="at.dasz.KolabDroid.Settings.SettingsView" android:targetPackage="at.dasz.KolabDroid"/>
	</PreferenceScreen>

<PreferenceScreen android:key="account_manager" android:title="Contact Account Manager" android:summary="Edit Accounts of Contacts"><intent 
			android:targetClass="at.dasz.KolabDroid.Settings.AccountManager" android:targetPackage="at.dasz.KolabDroid" android:action="at.dasz.KolabDroid.Settings.action.ACCOUNT_MANAGER"/></PreferenceScreen>
